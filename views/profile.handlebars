<style>
  div{
    background-color: white;
  }
</style>
<div class="row justify-space-between-md">
  <div class="character-card">
    <h2 class="page-title">New Character Creator</h2>
    <form class="character-form">
      <div class="form-group" id="character-name">
        <label for="character-name" class="form-label">Character Name</label>
        <input class="form-input" type="text" id="name"/>
      </div>
      <div class="form-group" id="race">
          <label for="exampleFormControlSelect1">Race:</label>
            <select class="form-control" id="race-select">
              <option>Dwarf</option>
              <option>Elf</option>
              <option>Halfling</option>
              <option>Human</option>
              <option>Dragonborn</option>
              <option>Gnome</option>
              <option>Half-Elf</option>
              <option>Half-Orc</option>
              <option>Tiefling</option>
            </select>
            <div id="race-options">

            </div>

      </div>
      <div class="form-group" id="archetype">
          <label for="exampleFormControlSelect1">Class:</label>
            <select class="form-control" id="archetype-select">
              <option>Barbarian</option>
              <option>Bard</option>
              <option>Cleric</option>
              <option>Druid</option>
              <option>Fighter</option>
              <option>Monk</option>
              <option>Paladin</option>
              <option>Ranger</option>
              <option>Rogue</option>
              <option>Sorcerer</option>
              <option>Warlock</option>
              <option>Wizard</option>
              <div id="archetype-options">

            </div>
            </select>
      </div>
      <div class="form-group" id="alignment">
          <label for="exampleFormControlSelect1">Alignment:</label>
            <select class="form-control" id="alignment-select">
              <option>Lawful Good</option>
              <option>Neutral Good</option>
              <option>Chaotic Good</option>
              <option>Lawful Neutral</option>
              <option>True Neutral</option>
              <option>Chaotic Neutral</option>
              <option>Lawful Evil</option>
              <option>Neutral Evil</option>
              <option>Chaotic Evil</option>
            </select>
      </div>
      </div>
      <div class="form-group" id="stat">
        <label for="stat" class="form-label">Stats:</label>
          <div class="form-group" id="stat">
            <label for="exampleFormControlSelect1">Strength:</label>
              <select class="form-control" id="strength-stat">
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
              </select>
          </div>
          <div class="form-group" id="dexterity">
            <label for="exampleFormControlSelect1">Dexerity:</label>
              <select class="form-control" id="dexterity-stat">
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
              </select>
          </div>
          <div class="form-group" id="constitution">
            <label for="exampleFormControlSelect1">Constitution:</label>
              <select class="form-control" id="constitution-stat">
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
              </select>
          </div>
          <div class="form-group" id="intelligence">
            <label for="exampleFormControlSelect1">Intelligence:</label>
              <select class="form-control" id="intelligence-stat">
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
              </select>
          </div>
          <div class="form-group" id="wisdom">
            <label for="exampleFormControlSelect1">Wisdom:</label>
              <select class="form-control" id="wisdom-stat">
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
              </select>
          </div>
          <div class="form-group" id="charisma">
            <label for="exampleFormControlSelect1">Charisma:</label>
              <select class="form-control" id="charisma-stat">
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
              </select>
          </div>
      </div>
      <div class="form-group" id="background">
        <label for="background" class="form-label">Background:</label>
          <div class="form-group" id="character-name">
            <label for="character-name" class="form-label">Name</label>
            <input class="form-input" type="text">
          </div>
          <div class="form-group" id="skill">
            <label for="skills" class="form-label">Skills:</label>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="skill1">
                <label class="form-check-label" for="skill1">
                  Skill 1
                </label>
                <br>
                <input class="form-check-input" type="checkbox" value="skill2">
                <label class="form-check-label" for="skill2">
                  Skill 2
                </label>
                <br>
                <input class="form-check-input" type="checkbox" value="skill3">
                <label class="form-check-label" for="skill3">
                  Skill 3
              </div>
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="background1">
            <label class="form-check-label" for="background1">
              Background 1
            </label>
            <br>
            <input class="form-check-input" type="checkbox" value="background2">
            <label class="form-check-label" for="background2">
              Background 2
            </label>
            <br>
            <input class="form-check-input" type="checkbox" value="background3">
            <label class="form-check-label" for="background3">
              Background 3
            </label>
            <br>
          </div>
      </div>
      <div class="form-group">
        <button class="btn btn-secondary" type="submit" id="character-submit">Submit</button>
      </div>
    </form>
  </div>
</div>

