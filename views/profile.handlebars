<div class="row justify-space-between-md">
  <div class="character-card">
    <h2 class="page-title">New Character Creator</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="character-name">Character Name</label>
        <input class="form-input" type="text" id="character-name" />
      </div>
      <div class="form-group">
        <label for="race">Race:</label>
        <input class="form-input" type="dropdown" id="race" />
      </div>
      <div class="form-group">
        <label for="archetype">Class:</label>
        <input class="form-input" type="password" id="archetype" />
      </div>
      <div class="form-group">
        <label for="alignment">Alignment:</label>
        <input class="form-input" type="password" id="alignment" />
      </div>
      <div class="form-group">
        <label for="stats">Stats:</label>
        <input class="form-input" type="password" id="stats" />
      </div>
      <div class="form-group">
        <label for="skills">Skills:</label>
        <input class="form-input" type="password" id="skills" />
      </div>
      <div class="form-group">
        <label for="background">Background:</label>
        <input class="form-input" type="password" id="background" />
      </div>
      <div class="form-group">
        <label for="backstory">Backstory:</label>
        <input class="form-input" type="textarea" id="backstory" />
      </div>
      <div class="form-group">
        <button class="btn btn-secondary" type="submit" id="signup-submit">signup</button>
      </div>
    </form>
  </div>
</div>

